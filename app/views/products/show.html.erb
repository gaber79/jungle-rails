<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <% if current_user %>
      <h2>Add a review:</h2>
        <%= render 'products/review' %>
    <% else %>
      Please sign up to put a review on this product. <%= link_to 'Signup', '/users/new' %>
    <% end %>
    

   <ul class="list-group"><div class="row ">
      <% @product.reviews.reverse.each do |review| %>
        <% if (review.id) %>
          <li class="list-group-item"><span class="review"><%= link_to fa_icon('trash'), product_review_path(@product, review), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %></span><span class="review">Rating: <%= review.rating %></span><span class="review"><%= review.description %></span></li>
        <% end %>
      <% end %>

    </div>
    </ul>

  </article>

</section>
